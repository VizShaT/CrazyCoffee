<h1>CoffeeBeans</h1>
<%= link_to 'Add New', new_bean_path %> 
<table class=" table table-hover">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Location</th>
  <th></th>
  <th></th>
  <th></th>
  </tr>
 
  <% @beans.each do |bean| %>
    <tr>
      <td><%= bean.title %></td>
      <td><%= bean.description %></td>
      <td><%= bean.location %></td>
      <td><%= link_to 'Show', bean %></td>
      <td><%= link_to 'Edit', edit_bean_path(bean) %></td>
      <td><%= link_to 'Delete', bean_path(bean), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>